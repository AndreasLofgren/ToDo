{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h2>Latest task</h2>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Task</th>
                <th scope="col">Deadline</th>
                <th scope="col"></th>

            </tr>
            </thead>
            <tbody>
            {% for todo in task %}
                {% if todo.isCompleted %}
                    <tr style="background-color: #00FF00">
                {% else %}
                    <tr>
                {% endif %}
                <th scope="row">{{ todo.id }}</th>
                <td>{{ todo.name }}</td>
                <td>{{ todo.deadline | date('F j, Y, g:i a')}}</td>
                <td><a href="/task/details/{{ todo.id }}" class="btn btn-success">View</a></td>
                <td><a href="/task/edit/{{ todo.id }}" class="btn btn-secondary">Edit</a></td>
                <td><a href="/task/delete/{{ todo.id }}" class="btn btn-danger">Delete</a></td>
                {% if todo.isCompleted %}
                    <td><a href="/task/complete/{{ todo.id }}" class="btn btn-warning">Undo complete</a></td>
                {% else %}
                    <td><a href="/task/complete/{{ todo.id }}" class="btn btn-success">Complete</a></td>
                {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
