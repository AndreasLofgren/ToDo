{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/TaskController.php'|file_link(0) }}">src/Controller/TaskController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/task/details.html.twig'|file_link(0) }}">templates/task/details.html.twig</a></code></li>
    </ul>
    <a class="btn btn-default" href="/">Back to task</a>
    <hr>
    <h2 class="page-header">
        {{ task.name }}
    </h2>
    <ul class="list-group">
        <li class="list-group-item">Description: {{ task.description }}</li>
        <li class="list-group-item">Deadline: {{ task.deadline | date('F j, Y, g:i a')}}</li>
        <li class="list-group-item">Priority: {{ task.priority }}</li>
        <li class="list-group-item">Created: {{ task.createDate | date('F j, Y, g:i a')}}</li>
    </ul>
</div>
{% endblock %}
